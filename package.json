{
  "name": "sfdx-org-list",
  "displayName": "SFDX Org List",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.40.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:non-scratch-orgs",
    "onView:scratch-orgs"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "org-list",
          "title": "Org List",
          "icon": "media/cloud-stack.png"
        }
      ]
    },
    "views": {
      "org-list": [
        {
          "id": "non-scratch-orgs",
          "name": "Non Scratch Orgs"
        },
        {
          "id": "scratch-orgs",
          "name": "Scratch Orgs"
        }
      ]
    },
    "commands": [
      {
        "command": "scratch-orgs.refresh",
        "title": "Refresh",
        "icon": {
          "light": "media/refresh.png",
          "dark": "media/refresh.png"
        }
      },
      {
        "command": "non-scratch-orgs.refresh",
        "title": "Refresh",
        "icon": {
          "light": "media/refresh.png",
          "dark": "media/refresh.png"
        }
      },
      {
        "command": "org.open",
        "title": "Open",
        "icon": {
          "light": "media/newwindow.png",
          "dark": "media/newwindow.png"
        }
      },
      {
        "command": "org.logout",
        "title": "Logout"
      },
      {
        "command": "org.delete",
        "title": "Delete"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "non-scratch-orgs.refresh",
          "when": "view == non-scratch-orgs",
          "group": "navigation"
        },
        {
          "command": "scratch-orgs.refresh",
          "when": "view == scratch-orgs",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "org.open",
          "when": "view == non-scratch-orgs || view == scratch-orgs && viewItem == org",
          "group": "inline"
        },
        {
          "command": "org.logout",
          "when": "view == non-scratch-orgs && viewItem == org"
        },
        {
          "command": "org.delete",
          "when": "view == scratch-orgs && viewItem == org"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/glob": "^7.1.1",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.11.7",
    "@types/vscode": "^1.40.0",
    "glob": "^7.1.5",
    "mocha": "^6.2.2",
    "typescript": "^3.6.4",
    "tslint": "^5.20.0",
    "vscode-test": "^1.2.2"
  }
}
